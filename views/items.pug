include mixins/all.pug
doctype html
html(lang='es-AR')
  head
    meta(charset='utf-8')
    title='Mercadolibre | Resultados'
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='Mercadolibre descripcion, keyword1 keyword2 keyword3')
    if build_static
      script(src="/javascripts/inline/main-result.js")
      link(rel='stylesheet', href='/stylesheets/base.css' )
      link(rel='stylesheet', href='/stylesheets/results.css', media="(min-width: 40em)" )
    script.
      var ML = {
        ajaxReady : false
      };  
    if !build_static
      script
        include ../public/javascripts/inline/main-result.js
    |
    link(rel='preconnect' href='http://mla-s1-p.mlstatic.com')
    link(rel='preconnect' href='http://mla-s2-p.mlstatic.com')
    link(rel='preload', href='/javascripts/dist/results.js', as='script', crossorigin)
    link(rel='preload', href='/javascripts/dist/searchbox.js',  as='script', crossorigin)
    link(rel='prefetch', href='/stylesheets/detail.css' as='style')
    style
      include ../public/stylesheets/results-seo.css
    if !build_static
      style
        include ../public/stylesheets/base.css
        include ../public/stylesheets/results.css
      link(rel='prefetch', href='/stylesheets/results.css' as='style')
      link(rel='prefetch', href='/stylesheets/base.css' as='style')
      link(rel='prefetch', href='/javascripts/inline/main-result.js' as='script')

body
  header.header
    div.container
      div.row
        h1.col-1.offset-1
          +logo
        +searchbox
  
  div.container
      div#app
  script(src="/javascripts/dist/searchbox.js", type="module")
  script(src="/javascripts/dist/results.js", type="module")
